{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "Components/": ["./src/Components/*"],
      "Data/": ["./src/Data/*"],
      "Interfaces/": ["./src/Interfaces/", "./src/Interfaces/*"],
      "Styles/": ["./src/Styles/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "src/Components/App.tsx"]
}
